html, body {
	width: 100%;
	height: 100%;
	margin: 0;
	padding: 0;

	font-family: "Helvetica Neue", sans-serif;
	font-size: 15px;
	line-height: 24px;
}
body {
	display: table;
}

.all {
	display: table-row;
}
.sidebar{
	
	 display: none;
	 position:left;
}

nav {
	width: 255px;
	border-right: 1px solid #0071b5;
}
nav.disappear {
	width: 0;
	visibility: hidden;
	border-right: none;
}
nav.disappear > .overview {
	display: none;
}
.overview {
	position: fixed;
	width: inherit;
	overflow: hidden;
	list-style-type: none;
	padding: 0;
}
.nav-link {
	display: block;
	padding: 0 10px;
}
.nav-link:hover {
	color: #fff;
	background: #0071b5;
}

header {
	background-color: #0071b5;
	color: #FFF;
	padding: 11px 15px;
	letter-spacing: 1px;
}
header > .sleeve {
	position: relative;
	height: 118px;
}

nav, #main {
	display: table-cell;
	background: #FFF;
}
